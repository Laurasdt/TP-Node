extends layout

block title
  | Add a user  

block content
  h1 Add a user
  form(action="/add-user" method="POST", class="box")
    label(for="name") Name
    input(type="text" name="name" required)
    br
    label(for="birth") Date
    input(type="date" name="birth" required)
    br
    button(type="submit") Add
