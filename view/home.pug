doctype html
html
  head
    title Add User
    link(rel="stylesheet", href="/css/style.css")
  body
    include header
    h1 Add an user
    form(action="/add-user" method="POST")
      label(for="name") Name
      input(type="text" name="name" required)
      br
      label(for="birth") Date
      input(type="date" name="birth" required)
      br
      button(type="submit") Add
